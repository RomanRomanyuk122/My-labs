def sum_of_digits(Число):
    digit_sum = 0
    while number > 0:
        last_digit = number % 10
        digit_sum += last_digit
        number //= 10
    return digit_sum

num = int(input("Введіть число: "))
result = sum_of_digits(num)
print(f"Сума розрядів числа {num} дорівнює {result}")